@model DOMS.Model.DbModels.Catalogue

@{
    ViewData["Title"] = "Create New Catalogue";
}

<h2>Create New Catalogue</h2>

<h4>Catalogue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCatalogue">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Family" class="control-label"></label>
                <select asp-for="Family" class="form-control" asp-items="@(new SelectList(ViewBag.Families, "FamilyId","Name"))"></select>
                <span asp-validation-for="Family" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memo" class="control-label"></label>
                <input asp-for="Memo" class="form-control" />
                <span asp-validation-for="Memo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

