@model DOMS.Model.DbModels.Family

@{
    ViewData["Title"] = "Create New Family";
}

<h2>Create New Family</h2>

<h4>Family</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFamily">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memo" class="control-label"></label>
                <input asp-for="Memo" class="form-control" />
                <span asp-validation-for="Memo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Families">Back to FAmilies</a>
</div>

